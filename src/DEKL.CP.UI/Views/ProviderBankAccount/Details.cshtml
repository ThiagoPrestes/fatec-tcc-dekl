@using DEKL.CP.Domain.Enums
@model DEKL.CP.UI.ViewModels.Provider.ProviderBankAccountRelashionshipsViewModel

@{
    ViewBag.Title = "Detalhes";
}

<h2>@ViewBag.Title</h2>
<div>
    <h4>Conta Bancária de Fornecedor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.Name):
        </dt>
        <dd  class="text-detail">
            @(Model.Name ?? "Não informado")
        </dd>

        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.Number):
        </dt>
        <dd  class="text-detail">
            @Html.DisplayFor(m => m.Number)
        </dd>

        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.DescriptionBankAgency):
        </dt>
        <dd  class="text-detail">
            @Html.DisplayFor(m => m.DescriptionBankAgency)
        </dd>

        @if (Model.TypeProvider == TypeProvider.PhysicalPerson)
        {
            <dt class="title-detail">
                @Html.DisplayNameFor(m => m.NameProvider):
            </dt>
            <dd class="text-detail">
                @Html.DisplayFor(m => m.NameProvider)
            </dd>
        }
        else
        {
            <dt class="title-detail">
                @Html.DisplayNameFor(m => m.CorporateNameProvider):
            </dt>
            <dd class="text-detail">
                @Html.DisplayFor(m => m.CorporateNameProvider)
            </dd>
        }

        @if (Model.TypeProvider == TypeProvider.PhysicalPerson)
        {
            <dt class="title-detail">
                @Html.DisplayNameFor(m => m.CPF):
            </dt>
            <dd  class="text-detail">
                @Html.DisplayFor(m => m.CPF)
            </dd>
        }
        else
        {
            <dt class="title-detail">
                @Html.DisplayNameFor(m => m.CNPJ):
            </dt>
            <dd class="text-detail">
                @Html.DisplayFor(m => m.CNPJ)
            </dd>
        }

    </dl>
</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
</p>
