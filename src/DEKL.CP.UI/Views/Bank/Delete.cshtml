@model DEKL.CP.UI.ViewModels.Bank.BankViewModel
@{
    ViewBag.Title = "Excluir Banco";
}

<style>
    .group {
        padding-top: 20px;
    }
</style>

<h2>@ViewBag.Title</h2>
<h3>Tem certeza que você quer deletar esse Banco? </h3>

<div class="group">
    <h4>Banco</h4>
    <hr/>
    @Html.ValidationMessage("Error", new {@class = "text-danger"})
    <dl class="dl-horizontal">
        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.Name):
        </dt>
        <dd class="text-detail">
            @Html.DisplayFor(m => m.Name)
        </dd>

        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.Number):
        </dt>
        <dd class="text-detail">
            @Html.DisplayFor(m => m.Number)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" class="btn btn-danger" value="Excluir"/>
            @Html.ActionLink("Voltar", "Index", null, new {@class = "btn btn-info"})
        </div>
    }
</div>