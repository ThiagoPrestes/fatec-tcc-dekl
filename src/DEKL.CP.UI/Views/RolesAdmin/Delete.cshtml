@model DEKL.CP.Infra.CrossCutting.Identity.Models.ApplicationRole

<h2>Excluir Grupo</h2>
<h3>Tem certeza que você quer deletar esse Grupo? </h3>
<i>Deletando esse grupo você irá remover todos os usuários desse grupo. Isso não remove os usuários.</i>

<div class="group">
    <h4>Grupo</h4>
    <hr />
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" class="btn btn-danger" value="Excluir" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>