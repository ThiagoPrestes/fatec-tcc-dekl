@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.VerifyPhoneNumberViewModel
<div class="container-content">
<h2>Verificar número de telefone</h2>
<div class="row">
    <div class="col-md-6">
        <section id="loginForm">
            @using (Html.BeginForm("VerifyPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("phoneNumber", @Model.PhoneNumber)
                <h4>Digite seu código de segurança.</h4>
                <hr />
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Code, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                    <small>
                        @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                    </small>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-outline-info" value="Enviar" />
                </div>
            }
        </section>
    </div>
</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
