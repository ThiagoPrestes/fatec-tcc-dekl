@model DEKL.CP.UI.ViewModels.Provider.ProviderPhysicalLegalPersonViewModel

<h2>Excluir Fornecedor</h2>
<h3>Tem certeza que você quer deletar esse Fornecedor? </h3>

<div class="group">
    <h4>Banco</h4>
    <hr />
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.NameCorporateName):
        </dt>
        <dd class="text-detail">
            @Html.DisplayFor(m => m.NameCorporateName)
        </dd>

        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.CPFCNPJ):
        </dt>
        <dd class="text-detail">
            @Html.DisplayFor(m => m.CPFCNPJ)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" class="btn btn-danger" value="Excluir" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>