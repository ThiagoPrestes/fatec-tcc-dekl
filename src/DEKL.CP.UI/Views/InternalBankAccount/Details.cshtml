@model DEKL.CP.UI.ViewModels.InternalBankAccount.InternalBankAccountViewModel

<h2>Detalhes</h2>
<div>
    <h4>Conta Bancária Interna</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.Name):
        </dt>
        <dd class="text-detail">
            @(Model.Name ?? "Não Informado")
        </dd>

        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.Number):
        </dt>
        <dd class="text-detail">
            @Html.DisplayFor(m => m.Number)
        </dd>

        <dt class="title-detail">
            @Html.DisplayNameFor(m => m.BankAgency.BankAgencyDescription):
        </dt>
        <dd class="text-detail">
            @Html.DisplayFor(m => m.BankAgency.BankAgencyDescription)
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
</p>
