@model DEKL.CP.Infra.CrossCutting.Identity.Models.ApplicationUser

<div class="container-content">

    <h2>Detalhes</h2>

    <div>
        <h4>Usuário</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt class="title-detail">
                Nome completo:
            </dt>
            <dd class="text-detail">
                @Model.FirstName  @Model.LastName
            </dd>
            <dt class="title-detail">
                @Html.DisplayNameFor(m => m.UserName):
            </dt>
            <dd class="text-detail">
                Login
            </dd>
        </dl>
    </div>
    <h4>Lista de Grupos para este usuário</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>Usuário não pertence a nenhum Grupo.</p>
    }
    else
    {
        <table class="table">
            <tr></tr>
            @foreach (var item in ViewBag.RoleNames)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </table>
    }

    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
    </p>

</div>
