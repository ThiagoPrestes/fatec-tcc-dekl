@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.LoginViewModel
<div class="container-content">

    <h2>Login</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Utilize uma conta local para login.</h4>
                    <hr />
                    @Html.ValidationMessage("Error", new { @class = "text-danger" })
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example@email.com" })
                        <small>
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                        </small>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite o email" })
                        <small>
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                        </small>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="custom-control custom-checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox-inline custom-control-input" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
                            <small>
                                @Html.ValidationMessageFor(m => m.RememberMe, null, new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="submit" value="Login" class="btn btn-info" />
                        @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword", null, new { @class = "btn btn-info"})
                    </div>
                }
            </section>
        </div>
    </div>
</div>