@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.VerifyCodeViewModel

<h2>Validação de código de verificação</h2>
<div class="row">
    <div class="col-md-6">
        <section id="sendCodeForm">
            @using (Html.BeginForm("VerifyCode", "Account", new { Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("provider", @Model.Provider)
                <hr />
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Code, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                    <small>
                        @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                    </small>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberBrowser)
                            @Html.LabelFor(m => m.RememberBrowser, new { @class = "control-label" })
                            @Html.HiddenFor(m => m.UserId)
                            <small>
                                @Html.ValidationMessageFor(m => m.RememberBrowser, null, new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Enviar" />
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}