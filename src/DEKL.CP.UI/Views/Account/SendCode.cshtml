@model DEKL.CP.Infra.CrossCutting.Identity.ViewModels.SendCodeViewModel
<div class="container-content">
    <h2>Enviar código de verificação</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="sendCodeForm">
                @using (Html.BeginForm("SendCode", "Account", new { Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    <div>
                        Provedor de Autenticação em Dois Fatores:
                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                        @Html.HiddenFor(m => m.UserId)
                        <input type="submit" value="Enviar" class="btn btn-info" />
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
